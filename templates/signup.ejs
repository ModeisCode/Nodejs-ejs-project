<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kayıt Ol</title>
  <link rel="stylesheet" href="/css/global.css" type="text/css">
</head>
<body>
  <h1>Kayıt Ol</h1>

  <form id="sign-form" action="/api/users" method="post" onsubmit="return checkPassword()">
    <label for="isim">Ad Soyad:</label>
    <input type="text" id="isim" name="username" required>

    <label for="eposta">E-posta:</label>
    <input type="email" id="eposta" name="email" required>

    <label for="sifre">Şifre:</label>
    <input type="password" id="sifre" name="password" required>

    <label for="sifreTekrar">Şifre Tekrar:</label>
    <input type="password" id="sifreTekrar" name="sifreTekrar" required>
    <br>
    <button type="submit">Kayıt Ol</button>
  </form>

  <script>
    function checkPassword() {
      var psw1 = document.getElementById('sifre').value;
      var psw2 = document.getElementById('sifreTekrar').value;
      if (psw1 === psw2) {
        return true;
      } else {
        alert('Şifreler eşleşmiyor!');
        return false;
      }
    }
  </script>
</body>
</html>